@model IGEN.Models.Game

@{
    ViewBag.Title = "| Create game";
}

<h2 id="topcreate">Create game</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <hr id="createtophr"/>
    @Html.ValidationSummary(true, "")
    @Html.LabelFor(model => model.CoverArt, new { id = "create-header-label", @class = "create-header-label-game" })
    @Html.EditorFor(model => model.CoverArt, new { htmlAttributes = new { placeholder = "Must be LINK to picture. Preferred standard cover art image.", id = "create-header" } })
    @Html.ValidationMessageFor(model => model.CoverArt, "", new { id = "create-header-val" })
    <br/>
    @Html.LabelFor(model => model.Title, new { id = "create-bigpic-label", @class = "create-bigpic-label-game" })
    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { id = "create-bigpic" } })
    @Html.ValidationMessageFor(model => model.Title, "", new { id = "create-bigpic-val" })
    <br/>
    @Html.LabelFor(model => model.Developer, new { id = "create-date-label", @class = "create-date-label-game" })
    @Html.EditorFor(model => model.Developer, new { htmlAttributes = new { id = "create-date" } })
    @Html.ValidationMessageFor(model => model.Developer, "", new { id = "create-date-val" })
    <br/>
    <input id="submit" class="submit-create submit-create-game" type="submit" value="Create" />
}

