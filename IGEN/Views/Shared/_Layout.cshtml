<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Archivo+Narrow" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
</head>
<body>
    <div id="container">
        <a id="a1" href="@Url.Action("Index", "Home")"><img id="logo" src="@Url.Content("~/Content/images/IGEN_red.png")" alt="logo" /></a>
        <a id="a2" href="@Url.Action("Index", "Home")"><p><i class="fa fa-home" aria-hidden="true"></i>Home</p></a>
        <a id="a3" href="magazine.html"><p><i class="fa fa-book" aria-hidden="true"></i>The Magazine</p></a>
        <a id="a33" href="#"><p>More<i class="fa fa-angle-double-down" aria-hidden="true"></i></p></a>
        <a id="a4" href="#"><p><i id="topsearch" class="fa fa-search" aria-hidden="true"></i>Search</p></a>
        <p id="a5"><a href="@Url.Action("Login", "Account")">Log in</a><br /><a href="@Url.Action("Register", "Account")">Register</a></p>
        <i id="a6" class="fa fa-search" aria-hidden="true"></i>
